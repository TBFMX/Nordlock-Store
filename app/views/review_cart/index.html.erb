<div class="contenido_productos">
	<div class="izquierda">
		<div class="titulo">Procesar Pedido &reg;</div>	
		<hr>				
	</div>												
</div>

	<div class="centrar"><%= button_to "Enviar" ,class: "boton_pedido" %></div>	
    
    <div class="centrar">
      <table class="tabla_formato" width="900" border="0" cellpadding="0" cellspacing="0">
      <tr class="tabla_encabezado_azul">
        <td>Medida de <br /> arandela</td>
        <td>Medida [mm]</td>
        <td>Medida [inch]</td>
        <td>Diametro <br />interno</td>
        <td>Diametro <br />externo</td>
        <td>Grosor T</td>
        <td>Piezas x <br /> paquete</td>
        <td>Peso</td>
        <td>no. Art</td>        
        <td class="tabla_encabezado_griss">Cantidad por pares</td>
         <td></td>
      </tr>
      <tbody>
        <% @cart.line_items.each do |line_item| %>    
            <tr class="tabla_contenido">
              <td><%= line_item.product.washer_size %></td>
              <td><%= line_item.product.bolt_size_metric %></td>
              <td><%= line_item.product.bolt_size_unc %></td>
              <td><%= line_item.product.diameter_inside %></td>
              <td><%= line_item.product.diameter_outside %></td>
              <td><%= line_item.product.thickness_T %></td>
              <td><%= line_item.product.min_package %></td>
              <td><%= line_item.product.weight %></td>
              <td><%= line_item.product.art_no %></td>
              <%= form_tag(line_items_path , remote: true) do %>
              <%= hidden_field_tag "product_id", "#{line_item.product.id}"%>
              <td><%= number_field_tag "quantity", line_item.quantity %>
              <%= submit_tag 'Agregar' %></td>
              <% end %>
            </tr> 
        <% end %>  
      </tbody>
    </table>
    </div> 

	<div class="centrar"><%= button_to "Enviar" ,class: "boton_pedido" %></div>	