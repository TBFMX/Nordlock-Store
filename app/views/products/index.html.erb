<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Washer Size</th>
      <th>Bolt size metric</th>
      <th>Bolt size UNC</th>
      <th>Diameter inside</th>
      <th>Diameter outside</th>
      <th>Thickness T</th>
      <th>Min Package</th>
      <th>Weight</th>
      <th>Art No.</th>                                                
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.washer_size %></td>
        <td><%= product.bolt_size_metric %></td>
        <td><%= product.bolt_size_unc %></td>
        <td><%= product.diameter_inside %></td>
        <td><%= product.diameter_outside %></td>
        <td><%= product.thickness_t %></td>
        <td><%= product.min_package %></td>        
        <td><%= product.weight %></td>
        <td><%= product.art_no %></td>        
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>