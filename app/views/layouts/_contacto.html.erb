<%= form_tag do |person| %> 
  <div class="tituloforma">Contacto</div>

  <label for="name"><span class="required">*</span>Nombre</label>
  <%= text_field_tag :nombre,nil, required: true, placeholder: "Nombre" %>  

  <label for="email"><span class="required">*</span>Correo electrónico</label> 
  <%= email_field_tag :email,nil, required: true, placeholder: "tu@email.com" %>  

  <label for="empresa">Compañia / Empresa</label> 
  <%= text_field_tag :empresa,nil, placeholder: "Compañia / Empresa" %> 

  <label for="telefono">Teléfono</label> 
  <%= text_field_tag :telefono,nil, placeholder: "Teléfono", pattern: "[0-9]*" %> 

  <label for="cp">Código Postal</label>      
  <%= text_field_tag :cp,nil, placeholder: "Código Postal", maxlength: "5", min: "0", pattern: "[0-9]{5}"%> 

  <label for="pais">País</label> 
  <%= text_field_tag :pais,nil, placeholder: "País" %>   

  <label for="comentarios">Comentarios</label> 
  <%= text_area_tag :comentarios,nil, required: true, placeholder: "Escriba su comentario aquí." %>
           
	<%= submit_tag "Enviar", id: "submit", class: 'boton' %>        
  <%#= submit_tag "MEDIDAS A COTIZAR", id: "cotizar", class: 'boton' %> 
  <div class="nota"><span class="required">*</span>Información obligatoria.</div>             
<% end %>
