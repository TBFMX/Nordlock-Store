    <div class="centrar">
      <table class="tabla_formato" width="900" border="0" cellpadding="0" cellspacing="0">
      <tr class="tabla_encabezado_azul">
        <td>Medida de <br /> arandela</td>
        <td>Medida [mm]</td>
        <td>Medida [inch]</td>
        <td>Diametro <br />interno</td>
        <td>Diametro <br />externo</td>
        <td>Grosor T</td>
        <td>Piezas x <br /> paquete</td>
        <td>Peso</td>
        <td>no. Art</td>        
        <td class="tabla_encabezado_griss">Cantidad por pares</td>
         <td></td>
      </tr>
      <tbody>
        <% @products.each do |product| %>
          <tr class="tabla_contenido">
            <td><%= product.washer_size %></td>
            <td><%= product.bolt_size_metric %></td>
            <td><%= product.bolt_size_unc %></td>
            <td><%= product.diameter_inside %></td>
            <td><%= product.diameter_outside %></td>
            <td><%= product.thickness_T %></td>
            <td><%= product.min_package %></td>
            <td><%= product.weight %></td>
            <td><%= product.art_no %></td>
            <td><%= text_field_tag :cantidad,nil, placeholder: "0", pattern: "[0-9]", size: "5" %></td>
            <td><%= button_to 'Agregar', line_items_path(product_id: product), remote: true %></td>
          </tr>
        <% end %>  
